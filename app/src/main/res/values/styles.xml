<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 타이틀바 관련 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 상태바 관련 -->
        <item name="android:statusBarColor">@color/itsability_pink</item>
    </style>


    <!-- Bottom Navigation의 Title 크기와 관련-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/notosanscjkkr_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/notosanscjkkr_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Bottom Navigation의 Icon과 Title의 사이를 조정하기 위해 사용-->
    <dimen name="design_bottom_navigation_height" tools:override="true">52dp</dimen>

    <!-- 상단 문구와 관련된 스타일 -->
    <style name="Textstyle_MainTop" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">27sp</item>
    </style>

    <!-- RecyclerView에 적용되는 글씨에 관련된 스타일 -->
    <style name="Textstyle_CardPlaceName" parent="@style/TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="Textstyle_CardPlaceAddress" parent="@style/TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">6sp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Textstyle_SearchActivityPlaceName" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:alpha">0.68</item>
    </style>

    <style name="Textstyle_SearchActivityProvinceName" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:alpha">0.68</item>
    </style>

    <style name="Textstyle_MapCardPlaceDescription" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">6sp</item>
        <item name="android:alpha">0.68</item>
    </style>

    <style name="Textstyle_placeDescriptionMainText" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Textstyle_placeDescriptionSubText" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/notosanscjkkr_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">7sp</item>
        <item name="android:alpha">0.68</item>
    </style>

    <style name="Textstyle_recyclerPhotoTitle" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Textstyle_recyclerCameraDate" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/notosanscjkkr_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="android:alpha">0.68</item>
    </style>

    <style name="Textstyle_recyclerHashTag" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Textstyle_recyclerParagraph" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/notosanscjkkr_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:alpha">0.68</item>
    </style>

    <!-- SplashActivity 구현 관련 -->
    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
